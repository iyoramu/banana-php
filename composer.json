{
    "name": "banana-php/banana-php",
    "description": "BANANA-PHP - Adaptable Next-Generation Advanced Nimble Architecture PHP Framework",
    "type": "framework",
    "license": "MIT",
    "authors": [
        {
            "name": "IRUTABYOSE Yoramu",
            "email": "yirutabyose@gmail.com",
            "homepage": "https://github.com/iyoramu"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/http-foundation": "^6.2",
        "symfony/console": "^6.2",
        "doctrine/dbal": "^3.6",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0",
        "monolog/monolog": "^3.0",
        "firebase/php-jwt": "^6.4",
        "phpmailer/phpmailer": "^6.7",
        "twig/twig": "^3.5",
        "predis/predis": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "rector/rector": "^0.15"
    },
    "autoload": {
        "psr-4": {
            "BananaPHP\\": "src/",
            "App\\": "app/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php bin/banana optimize",
            "@php bin/banana cache:clear"
        ],
        "post-update-cmd": [
            "@php bin/banana optimize",
            "@php bin/banana cache:clear"
        ],
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "rector": "rector process --dry-run",
        "rector-fix": "rector process"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}