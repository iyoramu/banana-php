#!/usr/bin/env php
<?php

declare(strict_types=1);

/*
|--------------------------------------------------------------------------
| BANANA Console Application
|--------------------------------------------------------------------------
|
| This is the command-line interface for BANANA-PHP framework.
| It provides Artisan-like functionality for development tasks.
|
*/

require_once __DIR__ . '/../vendor/autoload.php';

$app = require_once __DIR__ . '/../bootstrap/app.php';

$console = $app->make(\App\Console\Kernel::class);

$status = $console->handle(
    $input = new \Symfony\Component\Console\Input\ArgvInput(),
    new \Symfony\Component\Console\Output\ConsoleOutput()
);

exit($status);